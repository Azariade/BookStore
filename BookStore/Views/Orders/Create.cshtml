@model BookStore.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label for="UserId">Utilisateur</label>
                <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "UserId", "FullName"))">
                    <option value="">Sélectionnez un utilisateru</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Products">Produits</label>
                @for (int i =0; i < ViewBag.Products.Count; i++)
                {
                    <div class="form-check">
                        <input type="checkbox" name="productIds" value="@ViewBag.Products[i].ProductId" class="form-check-input" />
                        <label class="form-check-label">@ViewBag.Products[i].Name</label>
                        <input type="number" name="quantites" class="form-control" placeholder="Quantité" />
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary">Commander</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
